@model int
<div class="ajax-loader">
    <img src="~/images/loading.gif" class="img-responsive" />
</div>
<!-- Room Details Slider Begin -->
<div class="container">
    <div class="row mt-5">
        <div class="col-lg-6">
            <div id="roomImages" class="carousel slide mb-3" data-ride="carousel">
                <!-- Indicators -->
                <ul class="carousel-indicators">
                </ul>

                <!-- The slideshow -->
                <div class="carousel-inner">
                </div>

                <!-- Left and right controls -->
                <a class="carousel-control-prev" href="#roomImages" data-slide="prev">
                    <span class="carousel-control-prev-icon"></span>
                </a>
                <a class="carousel-control-next" href="#roomImages" data-slide="next">
                    <span class="carousel-control-next-icon"></span>
                </a>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="room__details__title">
                <h2 id="roomName" class="text-primary"></h2>
                <h3 id="roomPrice" class="mt-3"></h3>
                <a href="#" class="primary-btn">Đặt ngay</a>
            </div>

            <div class="room__details__more__facilities">
                <h2>Tiện nghi:</h2>
                <div class="row" id="facilities">
                </div>
            </div>
        </div>
    </div>
    <!-- Room Details Slider End -->
    <!-- Rooms Details Section Begin -->
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="room__details__content">
                    <div class="room__details__desc">
                        <h2>Mô tả:</h2>
                        <div id="description"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Rooms Details Section End -->

@section scripts{
    <script src="~/lib/js/home/roomDetails.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function () {
            showRoomDetails(@Model);
        });
    </script>
}